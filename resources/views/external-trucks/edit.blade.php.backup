<script>
    // Toggle capacity fields based on loading type
    function toggleCapacityFields() {
        const loadingType = document.querySelector('input[name="loading_type"]:checked')?.value;
        const boxCapacity = document.getElementById('box-capacity');
        const tankCapacity = document.getElementById('tank-capacity');

        if (loadingType === 'box') {
            boxCapacity.classList.remove('hidden');
            tankCapacity.classList.add('hidden');
            boxCapacity.querySelector('input').setAttribute('required', 'required');
            tankCapacity.querySelector('input').removeAttribute('required');
        } else if (loadingType === 'tank') {
            tankCapacity.classList.remove('hidden');
            boxCapacity.classList.add('hidden');
            tankCapacity.querySelector('input').setAttribute('required', 'required');
            boxCapacity.querySelector('input').removeAttribute('required');
        } else {
            boxCapacity.classList.add('hidden');
            tankCapacity.classList.add('hidden');
            boxCapacity.querySelector('input').removeAttribute('required');
            tankCapacity.querySelector('input').removeAttribute('required');
        }
    }

    // Display selected files
    function displaySelectedFiles(input) {
        const selectedFiles = document.getElementById('selected-files');
        const filesList = document.getElementById('files-list');

        if (input.files.length > 0) {
            selectedFiles.classList.remove('hidden');
            filesList.innerHTML = '';

            Array.from(input.files).forEach((file, index) => {
                const fileDiv = document.createElement('div');
                fileDiv.className = 'flex items-center justify-between p-2 bg-gray-50 rounded';
                fileDiv.innerHTML = `
                    <span class="text-sm text-gray-700">${file.name}</span>
                    <span class="text-xs text-gray-500">${(file.size / 1024 / 1024).toFixed(2)} MB</span>
                `;
                filesList.appendChild(fileDiv);
            });
        } else {
            selectedFiles.classList.add('hidden');
        }
    }

    // Initialize on page load
    document.addEventListener('DOMContentLoaded', function() {
        toggleCapacityFields();
    });
</script>
